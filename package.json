{
  "name": "bidirectional-web-architecture",
  "version": "1.0.0",
  "description": "Web server with bidirectional connections to app server and database",
  "main": "web-server.js",
  "scripts": {
    "start:web": "node web-server.js",
    "start:app": "node app-server.js",
    "start:db": "node db-server.js",
    "start:all": "concurrently \"npm run start:db\" \"npm run start:app\" \"npm run start:web\"",
    "dev": "concurrently \"nodemon db-server.js\" \"nodemon app-server.js\" \"nodemon web-server.js\""
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "sqlite3": "^5.1.6",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  }
}